{
  "manifest_version": 2,

  "name": "Web Libs",
  "description": "This extension changes words that suck into words that don't suck",
  "version": "1.0",

   "content_scripts": 
  [
    {
      "matches": ["*://*/*"],
      "js": ["js/content_script.js"],
       "run_at": "document_end",
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js", "js/weblibs.js"]  },

  "permissions": [
    "storage"
  ]
}
